    <install><![CDATA[
        CREATE TABLE `ims_gather_feedback_question` (
          `id` int(10) unsigned NOT NULL AUTO_INCREMENT,
          `title` varchar(255) NOT NULL DEFAULT '' COMMENT '题目名称',
          `type` int(11) NOT NULL COMMENT '题目类型，1：单选题，2：多选题，3：填空题',
          `question` text NOT NULL COMMENT '单选题和多选题的问题选项，一个微擎的序列化数组，需要前端反序列化',
          `is_required` int(11) NOT NULL COMMENT '是否必填，0：不必须，1：必选',
          `sort` int(11) NOT NULL COMMENT '排序，数字越小，越在顶部',
          `is_open_remark` int(11) NOT NULL COMMENT '是否开启问题备注，1开启，0关闭',
          PRIMARY KEY (`id`)
        ) ENGINE=MyISAM AUTO_INCREMENT=6 DEFAULT CHARSET=utf8;

        CREATE TABLE `ims_gather_feedback_system_setting` (
          `id` int(10) unsigned NOT NULL AUTO_INCREMENT,
          `title` varchar(255) NOT NULL DEFAULT '',
          `image` varchar(255) NOT NULL DEFAULT '',
          PRIMARY KEY (`id`)
        ) ENGINE=MyISAM AUTO_INCREMENT=7 DEFAULT CHARSET=utf8;

        CREATE TABLE `ims_gather_feedback_user` (
          `id` int(10) unsigned NOT NULL AUTO_INCREMENT,
          `nickname` varchar(255) NOT NULL DEFAULT '',
          `openid` varchar(255) NOT NULL DEFAULT '',
          `address` varchar(255) NOT NULL DEFAULT '',
          PRIMARY KEY (`id`)
        ) ENGINE=MyISAM AUTO_INCREMENT=2 DEFAULT CHARSET=utf8;
    ]]></install>
